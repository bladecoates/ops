layout_create_venv() {
    local pyversion=$1
    local pvenv=$2
    if [ -n "$(which pyenv virtualenv)" ]; then
        pyenv virtualenv --force --quiet ${pyversion} ${pvenv}
    fi
    pyenv local --unset
}

layout_activate_venv() {
    if [ -n "$(which pyenv)" ]; then
        eval "$(pyenv init -)"
        eval "$(pyenv virtualenv-init -)"
        pyenv activate ${pvenv}
    fi
}
